             <li class="nav-item">
                <a class="nav-link" href="/my-products">My Products</a>
            </li>
        </ul>
      </div>
    </div>
  </nav>  <div class="container">
    <h2>
      <i class="bi bi-arrow-left-right" style="margin-right: 15px;"></i>
      Transfer Funds
    </h2>
    <p class="subtitle">Send money securely between accounts</p>

    <form action="/transfer" method="POST">

      <div class="form-section">
        <label for="fromAccount" class="form-label">
          <i class="bi bi-wallet form-icon"></i>
          From Account
        </label>
        <select class="form-select" id="fromAccount" name="from_account_id" required>
          <option value="" disabled selected>Select your account</option>
          <% accounts.forEach(acc => { %>
            <option value="<%= acc.account_id %>">
              <%= acc.product_name %> - <%= acc.account_type %> (Balance: $<%= Number(acc.balance).toFixed(2) %>)
            </option>
          <% }) %>
        </select>
        <div class="form-hint">
          <i class="bi bi-info-circle"></i>
          Choose the account to transfer from
        </div>
      </div>

      <div class="form-section">
        <label for="toAccountType" class="form-label">
          <i class="bi bi-person form-icon"></i>
          Recipient Account Type
        </label>
        <select class="form-select" id="toAccountType" name="to_account_type" required>
          <option value="" disabled selected>Select account type</option>
          <option value="savings">Savings</option>
          <option value="fixed_deposit">Fixed Deposit</option>
          <option value="debit_account">Debit Account</option>
          <option value="credit_account">Credit Account</option>
        </select>
        <div class="form-hint">
          <i class="bi bi-info-circle"></i>
          Select the recipient's account type
        </div>
      </div>

      <div class="form-section">
        <label for="recipientName" class="form-label">
          <i class="bi bi-person-badge form-icon"></i>
          Recipient Full Name
        </label>
        <input type="text" class="form-control" id="recipientName" name="recipient_full_name" placeholder="Enter recipient's full name" required />
        <div class="form-hint">
          <i class="bi bi-info-circle"></i>
          Enter the full name as registered with the bank
        </div>
      </div>

      <div class="form-section">
        <label for="recipientAccount" class="form-label">
          <i class="bi bi-credit-card form-icon"></i>
          Recipient Account Number
        </label>
        <input type="text" class="form-control" id="recipientAccount" name="recipient_account_number" placeholder="Enter 9-digit account number" pattern="\d{9}" maxlength="9" required />
        <div class="form-hint">
          <i class="bi bi-info-circle"></i>
          Enter the 9-digit account number
        </div>
      </div>

      <div class="form-section">
        <label for="amount" class="form-label">
          <i class="bi bi-currency-dollar form-icon"></i>
          Amount to Transfer
        </label>
        <input type="number" min="1" step="0.01" class="form-control" id="amount" name="amount" placeholder="0.00" required />
        <div class="form-hint">
          <i class="bi bi-info-circle"></i>
          Minimum transfer amount: $1.00
        </div>
      </div>

      <div class="security-note">
        <i class="bi bi-shield-check"></i>
        Your transfer is protected by 256-bit SSL encryption and processed securely through our banking infrastructure.
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-select">
          <i class="bi bi-send-fill"></i>
          Submit Transfer
        </button>
        <a href="/my-products" class="btn-secondary">
          <i class="bi bi-arrow-left"></i>          Back to My Products
        </a>
      </div>
    </form>
  </div>

