<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />  <title>Transfer Funds - RP Digital Bank</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Orbitron:wght@400;700;800&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Body & general */
    html, body {
      min-height: 100vh;
      width: 100vw;
      font-family: 'Inter', 'Georgia', serif;
      background: radial-gradient(ellipse at 60% 10%, #232946 0%, #0f172a 100%);
      color: #f3f6fa;
      overflow-x: hidden;
      display: flex;
      flex-direction: column;
      line-height: 1.6;
    }

    /* Navbar */
    .navbar {
      position: fixed;
      top: 0;
      width: 100vw;
      background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%);
      backdrop-filter: blur(10px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      z-index: 10;
      padding: 1rem 0;
      border-bottom: 1px solid rgba(125, 249, 255, 0.2);
    }

    .navbar-brand {
      font-weight: 800;
      font-size: 1.6rem;
      color: #7df9ff !important;
      text-shadow: 0 0 15px rgba(125, 249, 255, 0.6);
      letter-spacing: 1.2px;
      font-family: 'Orbitron', sans-serif;
    }

    .navbar-nav .nav-link {
      color: #cbd5e1 !important;
      font-weight: 500;
      transition: all 0.3s ease;
      padding: 0.5rem 1rem !important;
      border-radius: 8px;
      margin: 0 0.25rem;
    }

    .navbar-nav .nav-link:hover {
      color: #7df9ff !important;
      background: rgba(125, 249, 255, 0.1);
      transform: translateY(-2px);
    }

    .navbar-nav .nav-link.active {
      color: #22c55e !important;
      background: rgba(34, 197, 94, 0.1);
    }

    .navbar-toggler {
      border-color: rgba(125, 249, 255, 0.3);
    }

    .navbar-toggler-icon {
      filter: brightness(0) invert(1) drop-shadow(0 0 2px #7df9ff);
    }

    /* Container */
    .container {
      max-width: 800px;
      margin: 140px auto 80px auto;
      padding: 50px 40px;
      background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%);
      border-radius: 24px;
      box-shadow: 
        0 25px 60px rgba(34, 197, 94, 0.15),
        0 10px 30px rgba(125, 249, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(125, 249, 255, 0.2);
      position: relative;
      overflow: hidden;
      animation: fadeInUp 0.8s ease-out;
    }

    .container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #22c55e 0%, #7df9ff 50%, #22c55e 100%);
      animation: shimmer 3s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%, 100% { opacity: 0.6; }
      50% { opacity: 1; }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 768px) {
      .container {
        padding: 30px 25px;
        margin: 100px 15px 40px;
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Heading */
    h2 {
      text-align: center;
      color: #7df9ff;
      font-weight: 800;
      font-size: 2.5rem;
      margin-bottom: 15px;
      font-family: 'Orbitron', sans-serif;
      text-shadow: 
        0 0 20px rgba(125, 249, 255, 0.4),
        0 0 40px rgba(125, 249, 255, 0.2);
      position: relative;
      padding-bottom: 20px;
    }

    h2::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 3px;
      background: linear-gradient(90deg, #22c55e, #7df9ff, #22c55e);
      border-radius: 2px;
    }

    .subtitle {
      text-align: center;
      color: #cbd5e1;
      font-size: 1.1rem;
      margin-bottom: 40px;
      font-weight: 400;
    }

    /* Form styling */
    .form-section {
      margin-bottom: 25px;
    }

    .form-label {
      font-weight: 600;
      font-size: 1.1rem;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
      color: #e2e8f0;
    }

    .form-icon {
      color: #7df9ff;
      font-size: 1rem;
    }

    .form-control,
    .form-select {
      border-radius: 12px;
      border: 2px solid rgba(125, 249, 255, 0.3);
      background: linear-gradient(135deg, rgba(24, 31, 47, 0.8), rgba(30, 42, 58, 0.6));
      color: #f3f6fa;
      font-size: 1rem;
      padding: 14px 18px;
      transition: all 0.3s ease;
      font-family: 'Inter', sans-serif;
      backdrop-filter: blur(5px);
    }

    .form-control:focus,
    .form-select:focus {
      outline: none;
      border-color: #22c55e;
      box-shadow: 
        0 0 0 3px rgba(34, 197, 94, 0.1),
        0 0 20px rgba(125, 249, 255, 0.2);
      background: rgba(24, 31, 47, 0.9);
      color: #f3f6fa;
    }

    .form-control:hover,
    .form-select:hover {
      border-color: rgba(125, 249, 255, 0.5);
      background: linear-gradient(135deg, rgba(24, 31, 47, 0.9), rgba(30, 42, 58, 0.8));
    }

    .form-select option {
      background: #181f2f;
      color: #f3f6fa;
    }

    .form-hint {
      color: #94a3b8;
      font-size: 0.85rem;
      margin-top: 4px;
      display: flex;
      align-items: center;
      gap: 4px;
    }

/* Product option cards */
.product-option {
  background-color: #181f2f;
  border-radius: 20px;
  padding: 30px 25px;
  box-shadow: 0 6px 16px rgba(34, 197, 94, 0.15);
  text-align: center;
  color: #f3f6fa;
  transition: transform 0.25s ease, box-shadow 0.25s ease, background-color 0.25s ease, color 0.25s ease;
  cursor: pointer;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product-option:hover {
  transform: translateY(-8px);
  box-shadow: 0 10px 28px #22c55e66;
  background-color: #1e293b;
  color: #7df9ff;
}

.product-option img {
  width: 110px;
  height: auto;
  margin-bottom: 25px;
  filter: drop-shadow(0 0 8px #7df9ff);
}

.product-option h3 {
  font-weight: 700;
  font-size: 1.8rem;
  margin-bottom: 15px;
}

.product-option p {
  font-size: 1rem;
  line-height: 1.5;
  flex-grow: 1;
  margin-bottom: 25px;
  color: #d1d5db;
}

    /* Buttons */
    .btn-select {
      background: linear-gradient(135deg, #22c55e 0%, #7df9ff 100%);
      border: none;
      color: #0f172a;
      font-weight: 700;
      border-radius: 12px;
      padding: 14px 28px;
      font-size: 1.1rem;
      box-shadow: 
        0 8px 25px rgba(34, 197, 94, 0.4),
        0 4px 12px rgba(125, 249, 255, 0.2);
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      user-select: none;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      margin-top: 10px;
    }

    .btn-select::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn-select:hover::before {
      left: 100%;
    }

    .btn-select:hover,
    .btn-select:focus {
      background: linear-gradient(135deg, #16a34a 0%, #0ff 100%);
      transform: translateY(-2px);
      box-shadow: 
        0 12px 35px rgba(34, 197, 94, 0.5),
        0 6px 20px rgba(125, 249, 255, 0.3);
      color: #fff;
      outline: none;
    }

    .btn-select:active {
      transform: translateY(0);
    }

    .btn-secondary {
      background: rgba(100, 116, 139, 0.2);
      border: 2px solid rgba(100, 116, 139, 0.3);
      color: #cbd5e1;
      font-weight: 600;
      border-radius: 12px;
      padding: 12px 24px;
      font-size: 1rem;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-top: 15px;
    }

    .btn-secondary:hover {
      background: rgba(100, 116, 139, 0.3);
      border-color: rgba(125, 249, 255, 0.5);
      color: #7df9ff;
      transform: translateY(-1px);
    }

    .form-actions {
      display: flex;
      gap: 15px;
      align-items: center;
      margin-top: 30px;
      flex-wrap: wrap;
    }

    /* Footer */
    footer {
      text-align: center;
      margin-top: auto;
      padding: 30px 0;
      font-weight: 500;
      font-size: 0.9rem;
      color: #64748b;
      border-top: 1px solid rgba(125, 249, 255, 0.1);
      user-select: none;
      background: linear-gradient(135deg, #0f172a 0%, #1e2a3a 100%);
      letter-spacing: 0.04em;
    }

    /* Security note */
    .security-note {
      background: rgba(34, 197, 94, 0.1);
      border: 1px solid rgba(34, 197, 94, 0.3);
      border-radius: 12px;
      padding: 16px 20px;
      margin-top: 25px;
      margin-bottom: 25px;
      text-align: center;
      color: #cbd5e1;
      font-size: 0.9rem;
    }

    .security-note i {
      color: #22c55e;
      font-size: 1.1rem;
      margin-right: 6px;
    }

    /* Responsive design */
    @media (max-width: 768px) {
      h2 {
        font-size: 2rem;
      }
      
      .form-actions {
        flex-direction: column;
        align-items: stretch;
      }
      
      .btn-select,
      .btn-secondary {
        width: 100%;
        justify-content: center;
      }
    }

  </style>
  <script>
    function toggleDestinationFields() {
      const toType = document.querySelector('input[name="to_type"]:checked').value;
      document.getElementById('accountFields').style.display = toType === 'account' ? 'block' : 'none';
      document.getElementById('cardFields').style.display = toType === 'card' ? 'block' : 'none';
    }

    window.onload = () => {
      toggleDestinationFields();
      document.querySelectorAll('input[name="to_type"]').forEach(radio => {
        radio.addEventListener('change', toggleDestinationFields);
      });
    };
  </script>
</head>
