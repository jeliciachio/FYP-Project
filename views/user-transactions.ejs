        .main-container {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-top: 100px;
            margin-bottom: 100px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(125, 249, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

        .main-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, #7df9ff, transparent);
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .filter-section {
            background: rgba(15, 28, 42, 0.8);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border: 1px solid rgba(125, 249, 255, 0.1);
            backdrop-filter: blur(5px);
        }

        .filter-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            align-items: center;
            justify-content: center;
        }

        .filter-btn {
            background: linear-gradient(135deg, #0f4c4b 0%, #1e293b 100%);
            color: #7df9ff;
            border: 1px solid rgba(125, 249, 255, 0.3);
            border-radius: 25px;
            padding: 8px 20px;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .filter-btn:hover {
            background: linear-gradient(135deg, #7df9ff 0%, #22c55e 100%);
            color: #0f172a;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(125, 249, 255, 0.3);
        }

        .filter-btn:disabled {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: #ffffff;
            cursor: not-allowed;
            transform: none;
        }

        .date-filter-group {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            background: rgba(30, 41, 59, 0.5);
            padding: 0.8rem;
            border-radius: 12px;
            border: 1px solid rgba(125, 249, 255, 0.1);
        }

        .date-filter-group label {
            color: #7df9ff;
            font-weight: 600;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        .date-filter-group input[type="date"] {
            background: rgba(15, 28, 42, 0.9);
            border: 1px solid rgba(125, 249, 255, 0.3);
            border-radius: 8px;
            padding: 6px 12px;
            color: #7df9ff;
            font-size: 0.85rem;
            width: 150px;
        }

        .date-filter-group input[type="date"]:focus {
            outline: none;
            border-color: #7df9ff;
            box-shadow: 0 0 0 2px rgba(125, 249, 255, 0.2);
        }

        h2 {
            color: #7df9ff;
            font-family: 'Orbitron', 'Inter', 'Georgia', serif;
            font-weight: 700;
            font-size: 2.2rem;
            text-align: center;
            margin-bottom: 2rem;
            text-shadow: 0 0 20px rgba(125, 249, 255, 0.5);
            position: relative;
        }

        h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, transparent, #7df9ff, transparent);
            border-radius: 2px;
        }        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
            font-size: 0.9rem;
            table-layout: fixed;
            word-wrap: break-word;
        }

        thead th {
            background: linear-gradient(135deg, #0f4c4b 0%, #1e293b 100%) !important;
            color: #7df9ff !important;
            text-align: center;
            padding: 15px 12px;
            font-weight: 700;
            border-radius: 12px;
            user-select: none;
            box-shadow: 0 0 20px rgba(125, 249, 255, 0.3);
            font-size: 0.95rem;
            text-shadow: 0 0 10px rgba(125, 249, 255, 0.5);
            position: relative;
        }

        thead th::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, #7df9ff, transparent);
        }

        table.table thead th {
            background: linear-gradient(135deg, #0f4c4b 0%, #1e293b 100%) !important;
            color: #7df9ff !important;
            user-select: none;
        }

        tbody tr {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            cursor: default;
            border: 1px solid rgba(125, 249, 255, 0.1);
        }

        tbody tr:hover {
            transform: translateY(-3px);
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            box-shadow: 0 12px 30px rgba(34, 197, 94, 0.3);
        }

        tbody tr:hover td {
            color: #ffffff;
            font-weight: 600;
        }

        tbody td {
            padding: 15px 12px;
            text-align: center;
            color: #e0eaff;
            vertical-align: middle;
            user-select: text;
            font-size: 0.9rem;
        }

        tbody td:first-child,
        thead th:first-child {
            text-align: left;
            padding-left: 20px;
        }

        tbody td:last-child,
        thead th:last-child {
            padding-right: 20px;
        }

        .text-danger {
            color: #ef4444 !important;
            font-weight: 700;
            text-shadow: 0 0 10px rgba(239, 68, 68, 0.5);
        }

        .text-success {
            color: #22c55e !important;
            font-weight: 700;
            text-shadow: 0 0 10px rgba(34, 197, 94, 0.5);
        }

        .no-transactions {
            text-align: center;
            padding: 3rem;
            background: rgba(15, 28, 42, 0.8);
            border-radius: 15px;
            border: 1px solid rgba(125, 249, 255, 0.1);
            backdrop-filter: blur(5px);
        }

        .no-transactions p {
            font-size: 1.3rem;
            color: #94a3b8;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .no-transactions .icon {
            font-size: 4rem;
            color: #7df9ff;
            margin-bottom: 1rem;
            opacity: 0.7;
        }

        .transaction-stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .stat-card {
            background: rgba(15, 28, 42, 0.8);
            border-radius: 12px;
            padding: 1rem;
            text-align: center;
            border: 1px solid rgba(125, 249, 255, 0.1);
            backdrop-filter: blur(5px);
            flex: 1;
            min-width: 200px;
        }

        .stat-card h4 {
            color: #7df9ff;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .stat-card .value {
            font-size: 1.5rem;
            font-weight: 700;
            color: #ffffff;
        }

        .account-info {
            background: rgba(15, 28, 42, 0.8);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(125, 249, 255, 0.1);
            backdrop-filter: blur(5px);
        }

        .account-info h3 {
            color: #7df9ff;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .account-info p {
            color: #e0eaff;
            margin: 0;
            font-size: 1rem;
        }        footer {
            text-align: center;
            margin-top: auto;
            padding: 25px 0;
            font-weight: 600;
            font-size: 1rem;
            color: #94a3b8;
            border-top: 1px solid rgba(125, 249, 255, 0.2);
            user-select: none;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            letter-spacing: 0.04em;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        @media (max-width: 768px) {
            .filter-buttons {
                flex-direction: column;
                align-items: stretch;
            }
            
            .date-filter-group {
                flex-direction: column;
                align-items: stretch;
            }
            
            .transaction-stats {
                flex-direction: column;
            }
            
            .main-container {
                margin: 80px 10px 100px;
                padding: 1rem;
            }
            
            h2 {
                font-size: 1.8rem;
            }
            
            table {
                font-size: 0.8rem;
            }
            
            tbody td, thead th {
                padding: 10px 8px;
            }
        }
    </style>
</head>

