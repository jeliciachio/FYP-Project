<div class="staff-quiz-monitor-container">

<div class="header-section">
  <h2>üìä Student Quiz Participation</h2>
  <a href="/exports/staff-quizmonitor" class="btn-export-top" download>
    üìä Export to CSV
  </a>
</div>

<div class="stats-section">
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-number"><%= results.length %></div>
      <div class="stat-label">Total Attempts</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= results.filter(r => r.score === 10).length %></div>
      <div class="stat-label">Perfect Scores</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= results.length > 0 ? Math.round(results.reduce((sum, r) => sum + r.score, 0) / results.length * 10) / 10 : 0 %></div>
      <div class="stat-label">Average Score</div>
    </div>
    <div class="stat-card">
      <div class="stat-number"><%= [...new Set(results.map(r => r.user_id))].length %></div>
      <div class="stat-label">Unique Students</div>
    </div>
  </div>
</div>

<div class="table-container">
<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Score</th>
      <th>Date Taken</th>
    </tr>
  </thead>
  <tbody>
    <% if (results.length === 0) { %>
      <tr><td colspan="5" class="no-data">
        <i>üìù</i>
        No quiz attempts yet.
      </td></tr>
    <% } else { %>
      <% results.forEach((row, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= row.full_name || row.first_name + ' ' + row.last_name %></td>
          <td><%= row.email %></td>
          <td>
            <span class="score-badge <%= row.score === 10 ? 'score-perfect' : row.score >= 8 ? 'score-good' : row.score >= 5 ? 'score-average' : 'score-poor' %>">
              <%= row.score %>/10
            </span>
          </td>
          <td><%= new Date(row.created_at || row.date_taken).toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'short', 
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }) %></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
