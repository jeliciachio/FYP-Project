<div class="main-container">
  <h1>Product Catalog</h1>

  <div class="export-section">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h5 style="color: #7df9ff; margin: 0;">Manage your product catalog and export data</h5>
        <p style="color: #e0e7ff; margin: 0;">View, edit, and manage all banking products available to customers.</p>
      </div>
      <div class="col-md-4 text-end">
        <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#addProductModal">
          ‚ûï Add New Product
        </button>
        <br>
        <a href="/export/products" class="export-btn btn">
          üìä Export Products CSV
        </a>
      </div>
    </div>
  </div>

  <div class="table-container">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Product Name</th>
          <th>Product Type</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><strong><%= product.product_id %></strong></td>
            <td><%= product.product_name %></td>
            <td>
              <span class="badge">
                <%= product.product_type.replace('_', ' ').toUpperCase() %>
              </span>
            </td>
            <td><%= product.description %></td>
            <td>
              <button class="btn btn-warning btn-sm me-1" data-bs-toggle="modal" data-bs-target="#editProductModal<%= product.product_id %>">
                ‚úèÔ∏è Edit
              </button>
              <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteProductModal<%= product.product_id %>">
                üóëÔ∏è Delete
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Add Product Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%); border: 1px solid rgba(125, 249, 255, 0.2);">
      <div class="modal-header" style="border-bottom: 1px solid rgba(125, 249, 255, 0.2);">
        <h5 class="modal-title" id="addProductModalLabel" style="color: #7df9ff;">Add New Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
      </div>
      <form action="/admin/products" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="product_name" class="form-label" style="color: #7df9ff;">Product Name</label>
            <input type="text" class="form-control" id="product_name" name="product_name" required style="background: rgba(15, 28, 42, 0.9); border: 1px solid rgba(125, 249, 255, 0.3); color: #ffffff;">
          </div>
          <div class="mb-3">
            <label for="product_type" class="form-label" style="color: #7df9ff;">Product Type</label>
            <select class="form-select" id="product_type" name="product_type" required style="background: rgba(15, 28, 42, 0.9); border: 1px solid rgba(125, 249, 255, 0.3); color: #ffffff;">
              <option value="">Select Type</option>
              <option value="savings">Savings</option>
              <option value="fixed_deposit">Fixed Deposit</option>
              <option value="credit_card">Credit Card</option>
              <option value="debit_card">Debit Card</option>
              <option value="loan">Loan</option>
              <option value="investment">Investment</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label" style="color: #7df9ff;">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required style="background: rgba(15, 28, 42, 0.9); border: 1px solid rgba(125, 249, 255, 0.3); color: #ffffff;"></textarea>
          </div>
        </div>
        <div class="modal-footer" style="border-top: 1px solid rgba(125, 249, 255, 0.2);">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Add Product</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Product Modals (one for each product) -->
<% products.forEach(product => { %>
<div class="modal fade" id="editProductModal<%= product.product_id %>" tabindex="-1" aria-labelledby="editProductModalLabel<%= product.product_id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%); border: 1px solid rgba(125, 249, 255, 0.2);">
      <div class="modal-header" style="border-bottom: 1px solid rgba(125, 249, 255, 0.2);">
        <h5 class="modal-title" id="editProductModalLabel<%= product.product_id %>" style="color: #7df9ff;">Edit Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
      </div>
      <form action="/admin/products/<%= product.product_id %>/edit" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="edit_product_name<%= product.product_id %>" class="form-label" style="color: #7df9ff;">Product Name</label>
            <input type="text" class="form-control" id="edit_product_name<%= product.product_id %>" name="product_name" value="<%= product.product_name %>" required style="background: rgba(15, 28, 42, 0.9); border: 1px solid rgba(125, 249, 255, 0.3); color: #ffffff;">
          </div>
          <div class="mb-3">
            <label for="edit_product_type<%= product.product_id %>" class="form-label" style="color: #7df9ff;">Product Type</label>
            <select class="form-select" id="edit_product_type<%= product.product_id %>" name="product_type" required style="background: rgba(15, 28, 42, 0.9); border: 1px solid rgba(125, 249, 255, 0.3); color: #ffffff;">
              <option value="savings" <%= product.product_type === 'savings' ? 'selected' : '' %>>Savings</option>
              <option value="fixed_deposit" <%= product.product_type === 'fixed_deposit' ? 'selected' : '' %>>Fixed Deposit</option>
              <option value="credit_card" <%= product.product_type === 'credit_card' ? 'selected' : '' %>>Credit Card</option>
              <option value="debit_card" <%= product.product_type === 'debit_card' ? 'selected' : '' %>>Debit Card</option>
              <option value="loan" <%= product.product_type === 'loan' ? 'selected' : '' %>>Loan</option>
              <option value="investment" <%= product.product_type === 'investment' ? 'selected' : '' %>>Investment</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="edit_description<%= product.product_id %>" class="form-label" style="color: #7df9ff;">Description</label>
            <textarea class="form-control" id="edit_description<%= product.product_id %>" name="description" rows="3" required style="background: rgba(15, 28, 42, 0.9); border: 1px solid rgba(125, 249, 255, 0.3); color: #ffffff;"><%= product.description %></textarea>
          </div>
        </div>
        <div class="modal-footer" style="border-top: 1px solid rgba(125, 249, 255, 0.2);">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning">Update Product</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% }) %>

<!-- Delete Product Modals (one for each product) -->
<% products.forEach(product => { %>
<div class="modal fade" id="deleteProductModal<%= product.product_id %>" tabindex="-1" aria-labelledby="deleteProductModalLabel<%= product.product_id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="background: linear-gradient(135deg, #232946 0%, #1e2a3a 100%); border: 1px solid rgba(125, 249, 255, 0.2);">
      <div class="modal-header" style="border-bottom: 1px solid rgba(125, 249, 255, 0.2);">
        <h5 class="modal-title" id="deleteProductModalLabel<%= product.product_id %>" style="color: #dc3545;">Delete Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
      </div>
      <div class="modal-body" style="color: #e0e7ff;">
        <p>Are you sure you want to delete this product?</p>
        <p><strong>Product:</strong> <%= product.product_name %></p>
        <p><strong>Type:</strong> <%= product.product_type.replace('_', ' ').toUpperCase() %></p>
        <p class="text-warning">‚ö†Ô∏è This action cannot be undone!</p>
      </div>
      <div class="modal-footer" style="border-top: 1px solid rgba(125, 249, 255, 0.2);">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/admin/products/<%= product.product_id %>/delete" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">Delete Product</button>
        </form>
      </div>
    </div>
  </div>
</div>
<% }) %>
